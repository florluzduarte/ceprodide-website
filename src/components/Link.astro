---
// Props
interface Props {
  text: string;
  href: string;
  style: "primary" | "secondary";
}

const { text, href, style } = Astro.props as Props;
---

<a href={href} class={style} title={text}>{text}</a>

<style>
  a.primary {
    background-color: var(--bkg-inverse);
    color: var(--text-color-inverse);
    padding: 0.75rem 1.25rem;
    border-radius: 0.5rem;
    font-weight: 700;
    font-size: 0.875rem;
    text-decoration: none;
  }

  a.primary:hover {
    background: var(--blue);
    transition: all 0.3s ease;
  }

  a.secondary {
    background-color: var(--bkg);
    border: 1.5px solid var(--bkg-inverse);
    color: var(--text-color);
    padding: 0.75rem 1.25rem;
    border-radius: 0.5rem;
    font-weight: 700;
    font-size: 0.875rem;
    text-decoration: none;
  }

  a.secondary:hover {
    border: 1.5px solid var(--blue);
    color: var(--text-color-inverse);
    background: var(--blue);
    transition: all 0.3s ease;
  }

  @media screen and (min-width: 765px) {
    a.primary,
    a.secondary {
      font-size: 1.125rem;
      padding: 1rem 1.5rem;
    }
  }
</style>
