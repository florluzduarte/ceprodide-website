<form action="https://formsubmit.co/ceprodide@fadu.uba.ar" method="post">
  <div class="contact-form--container">
    <div class="contact-form--name-input">
      <label for="name" class="contact-form--label">NOMBRE</label>
      <input
        type="text"
        id="name"
        name="name"
        placeholder="Nombre y Apellido"
        class="contact-form--input-text"
        required
        autocomplete="name"
        aria-required="true"
        aria-autocomplete="list"
      />
    </div>
    <div class="contact-form--email-input">
      <label for="email" class="contact-form--label">EMAIL</label>
      <input
        type="email"
        id="email"
        name="email"
        placeholder="email@email.com"
        class="contact-form--input-text"
        required
        autocomplete="email"
        aria-required="true"
        aria-autocomplete="list"
      />
    </div>
    <div class="contact-form--message-input">
      <label for="message" class="contact-form--label">MENSAJE</label>
      <textarea
        name="message"
        id="message"
        cols="30"
        rows="10"
        placeholder="DÃ©janos tu consulta"
        class="contact-form--input-textarea"
        required
        aria-required="true"></textarea>
    </div>
    <input type="hidden" name="_captcha" value="false" />
    <input
      type="hidden"
      name="_next"
      value="https://www.ceprodide.com.ar/mensaje.html"
    />
    <input type="hidden" name="_subject" value="Contacto - CEPRODIDE" />
    <button class="contact-form--button" type="submit">Enviar</button>
  </div>
</form>

<style>
  .contact-form--container {
    display: flex;
    flex-direction: column;
    width: 85%;
    margin: 3rem auto;
    gap: 2rem;
  }

  .contact-form--name-input,
  .contact-form--email-input,
  .contact-form--message-input {
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
  }

  .contact-form--label {
    font-size: 0.875rem;
    font-weight: 700;
  }

  .contact-form--input-text {
    height: 2rem;
  }

  .contact-form--input-text,
  .contact-form--input-textarea {
    font-family: inherit;
    font-size: 0.875rem;
    color: var(--text-color);
    background-color: var(--grey);
    border: none;
    border-radius: 0.25rem;
    padding-left: 0.5rem;
  }

  .contact-form--input-textarea {
    padding: 0.5rem;
  }

  .contact-form--button {
    font-family: inherit;
    font-weight: 700;
    background-color: var(--bkg-inverse);
    color: var(--bkg);
    padding: 0.75rem 0;
    border: none;
    border-radius: 0.25rem;
  }

  .contact-form--button:hover {
    background: var(--blue);
    transition: all 0.3s ease;
  }

  @media screen and (min-width: 1023px) {
    .contact-form--label {
      font-size: 1.125rem;
    }

    .contact-form--container {
      width: 100%;
    }

    .contact-form--input-text {
      height: 3rem;
    }

    .contact-form--input-text,
    .contact-form--input-textarea {
      font-size: 1rem;
      padding-left: 1rem;
      border-radius: 0.5rem;
    }

    .contact-form--input-textarea {
      padding: 1rem;
      height: 22rem;
    }

    .contact-form--button {
      padding: 1rem 0;
      font-size: 1rem;
      border-radius: 0.5rem;
    }
  }
</style>
