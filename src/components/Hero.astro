---
interface Props {
  caption: string;
  title: string;
}

const { title, caption } = Astro.props as Props;
---

<section>
  <div class="hero--container">
    <p class="caption hero--caption">{caption}</p>
    <h1 class="hero--title">{title}</h1>
    <slot />
  </div>
</section>

<style>
  .hero--container {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    max-width: 80%;
    margin: 0 auto;
    gap: 2rem;
    padding: 4rem 0;
  }

  @media screen and (max-width: 285px) {
    .hero--container {
      padding: 3rem 0;
    }
  }

  .hero--title,
  .hero--caption {
    text-align: center;
  }
</style>
