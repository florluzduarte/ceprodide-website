---
// Integrations
import { Icon } from "astro-icon";

// Components
import Logo from "./Logo.astro";

// Data
import socialMediaData from "../data/socialMedia.json";

const navLinks = [
  {
    name: "Proyectos",
    path: "/proyectos/",
  },
  {
    name: "Investigadores",
    path: "/investigadores/",
  },
  {
    name: "Blog",
    path: "/blog/",
  },
  {
    name: "Contacto",
    path: "/contacto/",
  },
];
---

<nav class="nav">
  <div class="nav--container">
    <div class="nav--mobile-wrapper">
      <Logo />
      <button class="nav--btn-menu" id="nav--btn-menu">
        <Icon
          name="ri:menu-3-fill"
          width="24"
          height="24"
          aria-label="Abrir navegación móvil"
          aria-expanded="false"
        />
      </button>
    </div>
    <div class="nav--links-container">
      <ul class="nav--links" role="navigation">
        {
          navLinks.map((link) => (
            <li role="none" class="nav--link">
              <a href={link.path}>{link.name}</a>
            </li>
          ))
        }
      </ul>
      <div class="nav--social-media">
        {
          socialMediaData.map((link) => (
            <a href={link.href} target="_blank" aria-label={link.aria}>
              <Icon name={link.name} width={link.width} height={link.height} />
            </a>
          ))
        }
      </div>
    </div>
    <ul class="nav--links-desktop" role="navigation">
      {
        navLinks.map((link) => (
          <li role="none" class="nav--link">
            <a href={link.path}>{link.name}</a>
          </li>
        ))
      }
    </ul>
  </div>
</nav>

<style>
  .nav {
    position: sticky;
    top: 0;
  }

  .nav--container {
    display: flex;
    flex-direction: row;
    background-color: var(--bkg);
    justify-content: space-between;
    align-items: center;
  }

  .nav--mobile-wrapper {
    display: flex;
    justify-content: space-between;
    width: 100%;
    align-items: center;
    padding: 1rem;
  }

  .nav--links-desktop {
    display: none;
  }

  .nav--links-container {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    gap: 0.5rem;
    width: 100%;
    position: absolute;
    top: -1000px;
    transition: all 0.5s ease;
    padding: 2rem 0;
    z-index: -1;
  }

  .nav--link {
    text-align: center;
    padding-bottom: 0.5rem;
  }

  .nav--links-container.active {
    background: var(--bkg);
    top: 3rem;
    opacity: 1;
    transition: all 0.5s ease;
    z-index: 5;
  }

  .nav--social-media {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 0.75rem;
  }

  .nav--btn-menu {
    border: none;
    color: var(--text-color);
    background-color: transparent;
    cursor: pointer;
  }

  .is-active {
    color: var(--blue);
  }

  @media screen and (min-width: 760px) {
    .nav--container {
      padding: 2rem;
      width: 100%;
      margin: 0 auto;
    }

    .nav--mobile-wrapper {
      padding: 0;
    }

    .nav--links-container {
      display: none;
    }

    .nav--btn-menu {
      display: none;
    }

    .nav--links-desktop {
      display: flex;
      gap: 3rem;
    }
  }
</style>

<script>
  const menuBtn = document.querySelector("#nav--btn-menu");
  const menuLinks = document.querySelector(".nav--links-container");

  menuBtn.addEventListener("click", function () {
    menuBtn.classList.toggle("is-active");
    menuLinks.classList.toggle("active");
  });
</script>
